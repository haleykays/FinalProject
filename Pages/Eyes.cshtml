@page
@model EyesModel 

@{
    ViewData["Title"] = "Eyes page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/img/Eyelook1.jpg" width="20" height="400" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/img/Eyelook2.jpg" width="20" height="400" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/img/Eyelook4.jpg" width="20" height="400" class="d-block w-100" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].BuyAt)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.eyeProduct[0].Reviews)
            </th>
            <th></th>
        </tr>
    </thead>
    
<tbody>
@foreach (var item in Model.eyeProduct) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviews)
            </td>
            </tr>
}
</tbody>
</table>