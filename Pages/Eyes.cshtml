<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eyeProduct[0].BuyAt)
            </th>
            <th>
                Stars
            </th>
            <th></th>
        </tr>
    </thead>
    
<tbody>
@foreach (var item in Model.eyeProduct) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyAt)
            </td>
            <td>
                @{
                  if(item.Reviews.Count > 0)
                  {
                    double avg = item.Reviews.Average(r => r.Stars);
                    @Html.DisplayFor(modelItem => avg)
                  }
                  else
                  {
                    @:No Reviews Yet
                  }
                }
            </td>
            </tr>
}
</tbody>
</table>